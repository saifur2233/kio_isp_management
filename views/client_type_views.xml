<odoo>

    <record id="view_isp_client_type_tree" model="ir.ui.view">
        <field name="name">isp.client.type.tree</field>
        <field name="model">isp.client.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_isp_client_type_form" model="ir.ui.view">
        <field name="name">isp.client.type.form</field>
        <field name="model">isp.client.type</field>
        <field name="arch" type="xml">
            <form string="Support Team">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_isp_client_type" model="ir.actions.act_window">
        <field name="name">Client Type</field>
        <field name="res_model">isp.client.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_isp_client_type"
              parent="menu_configuration_root"
              action="action_isp_client_type"
              sequence="4"/>
</odoo>
