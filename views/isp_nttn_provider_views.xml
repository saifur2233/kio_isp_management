<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_isp_nttn_provider_tree" model="ir.ui.view">
        <field name="name">isp.nttn.provider.tree</field>
        <field name="model">isp.nttn.provider</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_isp_nttn_provider_form" model="ir.ui.view">
        <field name="name">isp.nttn.provider.form</field>
        <field name="model">isp.nttn.provider</field>
        <field name="arch" type="xml">
            <form string="NTTN Provider">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="NTTN Provider" class="oe_edit_only"/>
                        <h1>
                            <field name="name" string="NTTN Provider" required="1" style="font-size: min(4vw, 2.6rem);"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_isp_nttn_provider" model="ir.actions.act_window">
        <field name="name">NTTN Providers</field>
        <field name="res_model">isp.nttn.provider</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_isp_nttn_provider_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first NTTN Provider!
            </p>
        </field>
    </record>

    <menuitem
        id="menu_isp_nttn_provider"
        name="NTTN Providers"
        parent="menu_configuration_root"
        action="action_isp_nttn_provider"
        sequence="6"/>

</odoo>
