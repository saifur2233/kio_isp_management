<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ==================== TREE VIEW ==================== -->
    <record id="view_isp_survey_stage_tree" model="ir.ui.view">
        <field name="name">isp.survey.stage.tree</field>
        <field name="model">isp.survey.stage</field>
        <field name="arch" type="xml">
            <tree string="Survey Stages" default_order="sequence,id">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="fold"/>
                <field name="is_last_stage"/>
            </tree>
        </field>
    </record>

    <!-- ==================== FORM VIEW ==================== -->
    <record id="view_isp_survey_stage_form" model="ir.ui.view">
        <field name="name">isp.survey.stage.form</field>
        <field name="model">isp.survey.stage</field>
        <field name="arch" type="xml">
            <form string="Survey Stage">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="is_last_stage"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="fold"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ==================== ACTION ==================== -->
    <record id="action_isp_survey_stage" model="ir.actions.act_window">
        <field name="name">Survey Stages</field>
        <field name="res_model">isp.survey.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first survey stage.
            </p>
        </field>
    </record>

    <!-- ==================== CONFIGURATION MENU ==================== -->

    <!-- Survey Stages menu -->
    <menuitem id="menu_isp_survey_stage"
              name="Survey Stages"
              parent="menu_configuration_root"
              action="action_isp_survey_stage"
              sequence="9"/>

</odoo>
