<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_isp_work_order_type_tree" model="ir.ui.view">
        <field name="name">isp.work.order.type.tree</field>
        <field name="model">isp.work.order.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_isp_work_order_type_form" model="ir.ui.view">
        <field name="name">isp.work.order.type.form</field>
        <field name="model">isp.work.order.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_isp_work_order_type" model="ir.actions.act_window">
        <field name="name">Work Order Types</field>
        <field name="res_model">isp.work.order.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_work_order_type"
          name="Work Order Type"
          parent="menu_configuration_root"
          action="action_isp_work_order_type"
          sequence="7"/>


</odoo>
