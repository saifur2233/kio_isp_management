<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_api" model="ir.ui.view">
        <field name="name">res.config.settings.api.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//block[@name='performance']" position="before">
                <block title="ISP Settings" groups="base.group_system" name="isp_settings">

                    <!-- MB input -->
                    <setting id="isp_mb_value_setting"
                             help="Enter the MB value here. This represents the base capacity in Megabytes. Example: 1024 MB = 1 GB.">
                        <field name="isp_mb_value"/>
                    </setting>


                </block>
            </xpath>

        </field>
    </record>
</odoo>
