<odoo>
    <record id="view_isp_support_team_tree" model="ir.ui.view">
        <field name="name">isp.support.team.tree</field>
        <field name="model">isp.support.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_isp_support_team_form" model="ir.ui.view">
        <field name="name">isp.support.team.form</field>
        <field name="model">isp.support.team</field>
        <field name="arch" type="xml">
            <form string="Support Team">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_isp_support_team" model="ir.actions.act_window">
        <field name="name">Support Teams</field>
        <field name="res_model">isp.support.team</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_isp_support_team"
              name="Support Teams"
              parent="menu_configuration_root"
              action="action_isp_support_team"
              sequence="6"/>
</odoo>
